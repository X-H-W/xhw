class zhi:
      
    def xrk(self):
        print('放阳光')
    def wd(self):
        print('发炮、摇头')
    def jg(self):
        print('阻挡')

zhi.name = '植物'
print('他是%s'%zhi.name)
xrk = zhi()
xrk.name = '向日葵'
xrk.color = '红色'
xrk.zy = '阳光'
xrk.xue = 5
print('种类:%s\n颜色:%s\n行为:%s\n血量:%d\n'%(xrk.name,xrk.color,xrk.zy,xrk.xue))

wd = zhi()
wd.name = '豌豆'
wd.color = '绿色'
wd.fa = '瞎子'
wd.zy = '发炮、摇头'
wd.xue = 5
print('种类:%s\n颜色:%s\n发型:%s\n行为:%s\n血量:%d\n'%(wd.name,wd.color,wd.fa,wd.zy,wd.xue))

jg = zhi()
jg.name = '坚果'
jg.color = '灰色'
jg.lx = '抗打'
jg.zy = '阻挡'
jg.xue = 10
print('种类:%s\n颜色:%s\n行为:%s\n血量:%d\n'%(jg.name,jg.color,jg.zy,jg.xue))

class rl:
    def __init__(self):
        self.color = '灰色'
    def chi(self):
        print('吃')
js = rl()
js.name = '普通僵尸'
js.xue = 20
js.sd = 3
print('种类:%s\n血量:%d\n移动速度:%d\n'%(js.name,js.xue,js.sd))
